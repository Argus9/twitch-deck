<h1>TwitchDeck Daily Digest for <%= @date %></h1>

<ul>
    <li><b>New users: </b><%= @new_users %></li>
    <li><b>Culled users: </b><%= @culled_users %></li>
    <li><b>Top streamers: </b></li>
    <ul>
        <% @top_streamers.each do |streamer| %>
            <li><%= streamer.first %>: <%= streamer[1] %> users</li>
        <% end %>
    </ul>
    <li><b>Total users: </b><%= @total_users %></li>
    <li><b>Total activated users: </b> <%= @active_users %></li>
    <li><b>Active user growth: </b><%= @user_growth %></li>
</ul>